@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
@using(Html.BeginForm("WriterEditProfile","Writer",FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Writer Profile Update</h4>
                    <br/>
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Name Surname</label>
                        @*<input type="text" class="form-control" id="exampleInputName1" placeholder="Name">*@
                        @Html.TextBoxFor(x=>x.WriterName,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName)
                        <br/>
                        <br/>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @*<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">*@
                        @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterMail)
                        <br/>
                        <br/>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @*<input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password">*@
                        @Html.TextBoxFor(x=>x.WriterPassword,new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                        <br/>
                        <br/>
                      </div>
                      <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                          <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                          <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                          </span>
                        </div>
                      </div>
                    
                      <div class="form-group">
                        <label for="exampleTextarea1">About Writer</label>
                        @*<textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>*@
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class="form-control"})
                        @*@Html.ValidationMessageFor(x=>x.WriterAbout)*@
                        <br/>
                        <br/>
                      </div>
                      <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
                      <button class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
}
