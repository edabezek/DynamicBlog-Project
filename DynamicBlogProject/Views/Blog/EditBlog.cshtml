@model EntityLayer.Concrete.Article

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Edit Blog Page</h1>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post)) {
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x=>x.BlogId,new {@class="form-control"})
    <br />
    @Html.Label("Blog Title")
    @Html.TextBoxFor(x=>x.BlogTitle,new {@class="form-control"})
    <br />
    @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage,new {@class="form-control"})
    <br />
    @Html.Label("Blog Image")
    @Html.TextBoxFor(x=>x.BlogImage,new {@class="form-control"})
    <br />
    @Html.Label("Blog Category")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"});//cv den gelen değeri çekecek
    <br />
    @Html.Label("Blog Content")
    @Html.TextAreaFor(x=>x.BlogContent,10,3,new {@class="form-control"})
    <br />
    <br />
    <button class="btn btn-success">Update</button>
}

